@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@model PaintingGallery.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="background-image:url(/Content/Images/background.jpg);background-size:cover">
    <div class="container">


        <div class="row text-center">
            <div class=" col-md-offset-3 col-md-6 col-md-push-0" style="margin-top:10px">
                <img src="~/Content/Images/adminbg.png" class="img-responsive col-lg-12 text-center" alt="Responsive image">

            </div>
        </div>

        <div class="row">



            <div class="back col-md-offset-3 col-md-6  ">
                <img src="/Content/Images/bg2.png" alt="asd" class="img-responsive">
                <div class="caption  col-md-6">
                    <p style="font-size:32px;font:100">AdminSide</p>
                </div>
            </div>
        </div>

        <style>
            .back {
                position: relative;
                background: none;
                border: none;
            }

            .caption {
                position: absolute;
                align-self:center;
                top: 0;
                color:black;
                bottom: 50%;
                right:0;
                left:30%;
                width: auto;
            }
        </style>


    <br />
    <br />
        <div class="container text-center ">

            @Html.ActionLink("View All Users", "ViewAllUsers", "Admin", null, new { @class = "btn btn-primary btn-lg" })
            <br />
            <br />
            @Html.ActionLink("Delete a User", "DeleteUser", "Admin", null, new { @class = "btn btn-primary btn-lg" })
            <br />
            <br />
            @Html.ActionLink("Update a User", "UpdateUser", "Admin", null, new { @class = "btn btn-primary btn-lg" })

        </div>
    <br /><br /><br />

    
</body>
</html>

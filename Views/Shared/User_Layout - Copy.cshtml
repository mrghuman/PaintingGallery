<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <!-- NavigationBar -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">

                <a class="navbar-brand"> ArtnDesign </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-1">
                <ul class="nav navbar-nav navbar-right">

                    <li>@Html.ActionLink("Home", "Index", "UserHome")</li>
                    <li>@Html.ActionLink("Profile", "Profile", "UserHome")</li>
                    
                    <li>@Html.ActionLink("SignOut", "SignOut", "UserHome")</li>

                    
                    
                    <li class="glyphicon glyphicon-search" style="color:yellowgreen;margin-top:15px"> </li>

                    <li>
                        
                            
                        <form class="navbar-form navbar-left" action="/Search/Index/" role="search">
                            
                             
                            <button type="submit" class="btn btn-default" > Search  </button>
                        </form>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- /NavigationBar -->

    <div class="container body-content">
        @RenderBody()

        <div class="row">


            
            <footer>
                <div class="navbar">
                <hr />
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </div>
            </footer>
        </div>
        <style>
            hr {
                background-color: black;
                height: 1px;
                border: 0;
            }
        </style>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
